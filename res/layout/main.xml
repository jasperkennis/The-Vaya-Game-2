<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
<ImageView 
   android:id="@+id/logo_image"
   android:src="@drawable/logo"
   android:layout_width="280dip"
   android:layout_gravity="center"
   android:layout_height="135dip"
   />
<TextView  
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="@string/hello"
    />
    
<Button android:layout_width="fill_parent" android:id="@+id/nextscreenButton" android:layout_height="wrap_content" android:text="@string/nextButton" android:layout_marginTop="30dip"></Button>
</LinearLayout>
